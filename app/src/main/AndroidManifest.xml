<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seitzengineering.android.criminalintent">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
                     android:maxSdkVersion="18"/>
    <uses-feature android:name="android.hardware.camera"
                  android:required="false"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.seitzengineering.android.criminalintent.CrimeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seitzengineering.android.criminalintent.CrimePagerActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.seitzengineering.android.criminalintent.CrimeListActivity">
        </activity>

    </application>

</manifest>
